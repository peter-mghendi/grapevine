@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4">Grapevine</h1>
        <p class="lead">Asynchronous streams with gRPC and SignalR.</p>
    </div>

    <div>
        <div class="row align-items-center">
            <div class="col-12 col-md-4 form-group">
                <label for="startInput">Start</label>
                <input type="number" class="form-control" id="startInput" aria-describedby="startHelp">
                <small id="startHelp" class="form-text text-muted">The number to start with.</small>
            </div>

            <div class="col-12 col-md-4 form-group">
                <label for="countInput">Count</label>
                <input type="number" class="form-control" id="countInput" aria-describedby="countHelp">
                <small id="countHelp" class="form-text text-muted">The number of items to count.</small>
            </div>

            <div class="col-12 col-md-4 form-group">
                <label for="delayInput">Delay</label>
                <input type="number" class="form-control" id="delayInput" aria-describedby="delayHelp">
                <small id="delayHelp" class="form-text text-muted">The delay between items (in ms).</small>
            </div>

            <div class="col-12 col-md-4 d-flex">
                <input type="button" id="startButton" class="btn btn-outline-success mx-auto" value="Start" disabled/>
            </div>

            <div class="col-12 col-md-4 d-flex">
                <input type="button" id="stopButton" class="btn btn-outline-danger mx-auto" value="Stop" disabled/>
            </div>

            <div class="col-12 col-md-4 d-flex">
                <input type="button" id="resetButton" class="btn btn-outline-secondary mx-auto" value="Reset" disabled/>
            </div>
        </div>
    </div>

    <hr />

    <div>
        <canvas id="chart" class="w-100" height="200"></canvas>
    </div>
</div>

@section Scripts {
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/trigonometry.js"></script>
}
